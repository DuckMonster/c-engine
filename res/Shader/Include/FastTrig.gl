float fast_sin(float time)
{
	time = mod(time, TAU);
	time = time * TAU_INV * 100.0;
	int index = int(time);
	float frac = fract(time);

	return mix(SIN_TABLE[index], SIN_TABLE[index + 1], frac);
}

